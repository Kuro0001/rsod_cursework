@model Lab1.Models.ToSelectTour
@{
    ViewBag.Title = "SelectHotel";
}

<h2>Выбрать отель для тура</h2>

<p>
    @Html.RouteLink("Назад к направлениям", new { controller = "ToSelectForTour", action = "SelectDirection" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.First().Direction.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.First().Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Hotel)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.RouteLink("Выбрать", new { controller = "ToSelectForTour", action = "SelectTourOperator", idHotel = item.ID })
            </td>
        </tr>
    }

</table>