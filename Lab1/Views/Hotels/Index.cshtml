@model IEnumerable<Lab1.Models.Entities.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Список отелей</h2>

<p>
    @Html.ActionLink("СОздать новый", "SelectDirectionToCreatHotel", "Directions")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Direction.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Direction.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
